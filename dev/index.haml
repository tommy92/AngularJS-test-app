!!!
%html{ "ng-app" => "TomsApp" }
	%head
		%meta{ charset: 'utf-8' }
		%meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
		%title Test Task for Daniel

		%link{ href: 'css/style.css', rel: 'stylesheet' }
		%link{ href: 'css/vendor/bootstrap.min.css', rel: 'stylesheet' }
		%link{ href: 'css/vendor/bootstrap-theme.min.css', rel: 'stylesheet' }

		<!--[if lt IE 9]><script src="js/vendor/html5shiv.js"></script><script src="js/vendor/respond.min.js"></script><![endif]-->
	%body
		.navbar.navbar-fixed-top.navbar-inverse{ role: "navigation" }
			.container
				.navbar-header
					%button.navbar-toggle{ type: "button", data: { toggle: "collapse", target: ".navbar-collapse" } }
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{ href: "/" } Test task

				.collapse.navbar-collapse
					%ul.nav.navbar-nav{ "ng-controller" => "NavCtrl" }
						%li{ "ng-class" => "setActiveClass('/')" }
							%a{ href: "/" } Home
						%li{ "ng-class" => "setActiveClass('/page1')" }
							%a{ href: "/page1" } Page 1
						%li{ "ng-class" => "setActiveClass('/page2')" }
							%a{ href: "/page2" } Page 2
						%li{ "ng-class" => "setActiveClass('/page3')" }
							%a{ href: "/page3" } Page 3

		.container
			.row.row-offcanvas.row-offcanvas-right
				#sidebar-left.col-md-2{ role: "navigation" }
					.well.sidebar-nav
						%ul.nav
							%li Left Sidebar
							%li
								%a{ href: "/page1" } Page 1
							%li
								%a{ href: "/page2" } Page 2
				.col-md-8
					%div{ "ng-view" => "" }

				#sidebar-right.col-md-2{ role: "navigation" }
					.well.sidebar-nav
						%ul.nav
							%li Right Sidebar
							%li
								%a{ href: "/page3" } Page 3

			%hr
			%footer
				%p &copy; Company 2013

		%script{ src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" }
		%script{ src: "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js" }
		%script{ src: "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-route.min.js" }
		%script{ src: "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-touch.min.js" }
		%script{ src: "js/vendor/bootstrap.min.js" }
		%script{ src: "js/app.min.js" }

